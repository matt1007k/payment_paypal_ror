.col-md-3.no-padding.inline-block.in-top.margin-top-small
  %nav.medium
    .white-text.green.col-md-12
      Admin General
.col-md-9.inline-block.in-top.margin-top-small
  .card.large-padding
    .col-md-8.col-sm-8.col-xs-8.inline-block
      %h2= @product.name
    .col-md-4.col-md-4.col-xs-4.inline-block
      %p.big.no-margin.red-text 10 usd
    %nav.top-space
      =link_to product_path(id: @product.id, client: true), class: "other-grey large-padding text-center col-md-4 inline-block" do
        Ver como cliente
      =link_to edit_product_path(@product), class: "other-grey large-padding text-center col-md-4 inline-block" do
        Editar producto
      =link_to @product,method: :delete , class: "other-grey large-padding text-center col-md-4 inline-block",:"data-confirm" => "¿Estás seguro de eliminar el producto?" do
        Eliminar producto
